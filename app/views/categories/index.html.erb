<div class="table-responsive">
  <table class="table table-hover table-condensed table-bordered table-striped">
    <thead>
      <tr>
        <th>Category group</th>
        <th>Name</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.category_group_name %></td>
          <td><%= category.name %></td>
          <td>
            <div class="btn-group" role="group">
              <%= link_to('Show', category, class: 'btn btn-sm btn-info', role: 'button') if policy(category).show? %>
              <%= link_to('Edit', edit_category_path(category), class: 'btn btn-sm btn-warning') if policy(category).update? %>
              <%= link_to('Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger', role: 'button') if policy(category).destroy? %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-md-3 col-md-offset-9">
    <%= link_to 'New Category', new_category_path, class: 'pull-right btn btn-primary' %>
  </div>
</div>
