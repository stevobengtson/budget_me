<p>
  <strong>Account:</strong>
  <%= @transaction.account_name %>
</p>

<p>
  <strong>Category:</strong>
  <%= @transaction.category_name %>
</p>

<p>
  <strong>Date:</strong>
  <%= formatted_date(@transaction.occurred_at) %>
</p>

<p>
  <strong>Memo:</strong>
  <%= @transaction.memo %>
</p>

<p>
  <strong>Amount:</strong>
  <%= number_to_currency(@transaction.amount) %>
</p>

<div class="row">
  <div class="col-md-3 col-md-offset-9">
    <%= link_to 'Edit', edit_transaction_path(@transaction), class: 'pull-right btn btn-warning' %>
  </div>
</div>
