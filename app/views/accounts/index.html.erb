<div class="page-header">
  <h1>Accounts <small>Manage all your accounts here.</small></h1>
</div>

<div class="table-responsive">
  <table class="table table-hover table-condensed table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Balance</th>
        <th>Account type</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @accounts.each do |account| %>
        <tr class="<%= account_class(account) %>">
          <td><%= account.name %></td>
          <td><%= account.balance %></td>
          <td><%= account.account_type_name %></td>
          <td>
            <div class="btn-group" role="group">
              <%= link_to('Show', account, class: 'btn btn-sm btn-info', role: 'button') if policy(account).show? %>
              <%= link_to('Edit', edit_account_path(account), class: 'btn btn-sm btn-warning') if policy(account).update? %>
              <%= link_to('Delete', account, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger', role: 'button') if policy(account).destroy? %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-md-3 col-md-offset-9">
    <%= link_to 'New Account', new_account_path, class: 'pull-right btn btn-primary' %>
  </div>
</div>
