<div class="panel panel-<%= @account.active? ? 'primary' : 'danger' %>">
  <div class="panel-heading">
    <%= @account.name %> - <small><%= @account.account_type_name %></small>
  </div>
  <div class="panel-body">
    <%= @account.note %>
  </div>
  <div class="panel-footer">Balance: <%= @account.balance %></div>
</div>

<div class="row">
  <div class="col-md-3 col-md-offset-9">
    <%= link_to 'Edit', edit_account_path(@account), class: 'pull-right btn btn-warning' %>
  </div>
</div>
