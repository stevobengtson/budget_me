<%= bootstrap_form_for(account, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-10') do |f| %>
  <%= f.alert_message "Please fix the errors below." %>
  <%= f.text_field :name %>
  <%= f.text_area :note %>
  <%= f.text_field :balance, label: 'Starting Balance' %>
  <%= f.collection_select :account_type_id, AccountType.all, :id, :name %>
  <%= f.form_group do %>
    <%= f.submit %>
  <% end %>
<% end %>
